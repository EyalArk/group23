//extends layout
doctype html
html(lang="en")
    head
        link(rel="stylesheet" href="style.css")
        script(defer src="script.js")
        script(defer src="app.js")
        script(defer src="crud.js")
        script(defer src="homePage.js")
        meta(charset="UTF-8")
        title Title
    body
        nav
            a.homeBtn(href='/homePage') Home
            a(href='/products') Products
            a(href='/myCart') My Cart
            a(href='/myOrder') My Orders
            #loggedInUserContainer
                #loggedInUserName
                a#logoutLink(href='/signIn', style='color: red') Logout
        header Products
        form#searchForm
            input#search(type='text', placeholder='Search..', name='search')
        #filtersButtons.container
            button.btnFilter(onclick="filterByBrand('all')")  Show all
            button.btnFilter(onclick="filterByBrand('Nike')") Nike
            button.btnFilter(onclick="filterByBrand('New Balance')") New Balance
            button.btnFilter(onclick="filterByBrand('Yeezy')")  Yeezy
        .table-container
            table
                tr
                    each product in products
                        tr
                            td= product.name
                            td= product.fit
                            td
                                .image-container
                                    img.image1(src=product.image1)
                                    img.image2(src=product.image2)
                            td= product.price
                            td
                                .filtersButtons
                                    #btnDetails1
                                        button.button1(onclick="ViewMore()") Details
                                    #btnDetails2
                                        button.button2(onclick="AddToCart()") Add To Cart

        footer
            a(href='/aboutUs') About Us
            a(href='/contactUs') Contact Us
