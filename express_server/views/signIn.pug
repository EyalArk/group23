doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title Title
        link(rel='stylesheet', href='style.css')
        link(rel='stylesheet', href='Login.css')
    body
        header
            h1(style='margin-top: 5px; margin-bottom: 10px;') Login
        .flex-container
            .content
                form#login(action='/signInUser', method='post')
                    label(for='accountEmail') Email
                    input#accountEmail(type='email', name='loginEmail', placeholder='Enter your email', required='')
                    label(for='psw') Password
                    input#psw(type='password', name='loginPsw', placeholder='Enter Password', required='')
                    button#loginBtn(type='submit') Login
                    br
                    #signUpContainer
                        label#newUserLabel New User?
                        a#signUpLink(href='/signUp') Sign up