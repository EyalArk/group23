doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title My Cart
        link(rel='stylesheet', href='style.css')
        script(defer, src='script.js')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
    body
        nav
            a.homeBtn(href='/homePage') Home
            a(href='/products') Products
            a(href='/myCart') My Cart
            a(href='/myOrder') My Orders
            #loggedInUserContainer
                #loggedInUserName
                a#logoutLink(href='/signIn', style='color: red') Logout
    br
    header Orders List
    table.table-container
        tr
            th Order
            th date
            th totalPrice
            th userEmail
        each order, index in orders
            tr
                //td= order.orderId
                td= index+1
                td= (order.date)
                td= order.totalPrice
                td= order.userEmail

    footer
        a(href='/aboutUs') About Us
        a(href='/contactUs') Contact Us
